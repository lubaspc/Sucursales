@model IEnumerable<Sucursales.Models.Product>

@{
    ViewBag.Title = "Productos";
}
@section Scripts
{
    <script>Utils.appliFilter()</script>
}

<h2 class="text-light">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear producto", "Create", new { }, new { @class = "btn btn-info" })
</p>
<table class="table table-dark">
    <thead>
        <tr id="filters">
            <th>
                <input name="name" placeholder="Nombre" />
            </th>
            <th>
                <input name="price" placeholder="Precio" />
            </th>
            <th>
                <input name="codebar" placeholder="Codigo de barras" />
            </th>
            <th class="text-right">
                @Html.ActionLink("Aplicar filtro", "Index", new { }, new { @class = "btn btn-info", @id = "btn-filter" })
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeBar)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeBar)
            </td>

            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "badge badge-info" })
                | <a href="@Url.Action("Upsert",new { id = item.Id})">
                    @if (item.Active)
                    {
                        <i class="fas fa-toggle-on text-light"></i>
                    }
                    else
                    {
                        <i class="fas fa-toggle-off text-light"></i>
                    }
                </a>
            </td>
        </tr>
    }

</table>

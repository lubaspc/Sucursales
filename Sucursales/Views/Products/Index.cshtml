@model IEnumerable<Sucursales.Models.Product>

@{
    ViewBag.Title = "Productos";
}

<h2 class="text-light">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear producto", "Create",new { },new { @class="btn btn-info"})
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeBar)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodeBar)
        </td>
            
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "badge badge-info"})
            | <a href="@Url.Action("Upsert",new { id = item.Id})">
                @if (item.Active)
                {
                    <i class="fas fa-toggle-on text-light"></i>
                }
                else
                {
                    <i class="fas fa-toggle-off text-light"></i>
                }
            </a>
        </td>
    </tr>
}

</table>

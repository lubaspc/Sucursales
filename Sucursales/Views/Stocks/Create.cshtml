@model Sucursales.Models.Stock

@{
    ViewBag.Title = "Agregar stock";

    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}      
 @if(ViewBag.error != null)
{
    <span class="invalid-feedback d-block text-warning">@ViewBag.error</span>
}
<div class="row row-cols-md-3 row-cols-sm-2 row-cols-1 p-3">
    <div class="form-group">
        @Html.LabelFor(model => model.BranchId, "BranchId", htmlAttributes: new { @class = "control-label col-12" })
        <div class="col-12">
            @Html.DropDownList("BranchId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProductId, "ProductId", htmlAttributes: new { @class = "control-label col-12" })
        <div class="col-12">
            @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-12" })
        <div class="col-12">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-warning" })
        </div>
    </div>
    </div>
    <div class="form-group text-right">
        <div class="col-12">
            <input type="submit" value="Crear" class="btn btn-info" />
        </div>
    </div>

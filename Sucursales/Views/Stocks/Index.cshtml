@model IEnumerable<Sucursales.Models.Stock>

@{
    ViewBag.Title = "Inventario";
}
@section Scripts
{
    <script src="@Url.Content("~/Content/JS/Inventary/Index.js")"></script>
}

<h2 class="text-light">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Agregar producto a sucursal", "Create", new { }, new { @class = "btn btn-info" })
</p>
<form method="get">
    <table class="table table-dark">
       
    </table>
</form>
<table class="table table-dark">
    <thead>
        <tr id="filters">
            <th>
                <input name="branch" placeholder="Sucursal"/>
            </th>
            <th>
                <input name="product" placeholder="Producto" />
            </th>
            <th>
                <input name="quantity" placeholder="Cantidad"/>
            </th>
            <th class="text-right">
                @Html.ActionLink("Aplicar filtro", "Index", new { }, new { @class = "btn btn-info",@id = "btn-filter" })
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Branch.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td class="text-right">
                @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "badge badge-info" }) |
                @Html.ActionLink("Ver Historial", "Details", new { id = item.Id }, new { @class = "badge badge-info" }) |
                @Html.ActionLink("Quitar Inventario", "Delete", new { id = item.Id }, new { @class = "badge badge-danger btn-delete" })
            </td>
        </tr>
    }

</table>

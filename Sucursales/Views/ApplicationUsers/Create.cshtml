@model Sucursales.Models.RegisterViewModel

@{
    ViewBag.Title = "Crear empleado";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}


<div class="row row-cols-3">

    <div class="form-group text-light text-left">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-12" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group text-light text-left">
        @Html.LabelFor(model => model.UserName, "Nombre de usuario", htmlAttributes: new { @class = "control-label col-12" })
        <div class="col-12">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-warning" })
        </div>
    </div>

    <div class="form-group text-light text-left">
        @Html.LabelFor(model => model.Password, "Contraseña", htmlAttributes: new { @class = "control-label col-12" })
        <div class="col-12">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-warning" })
        </div>
    </div>
</div>


<div class="form-group">
    <div class="col-12">
        <input type="submit" value="Crear" class="btn btn-info" />
    </div>
</div>
